<%- include("partials/header-bookInfo")%>
    <div class="container">
        <section class="main">
            <div class="card-wrapper">
                <div class="card book-info">
                    <div class="author-cover">
                        <img src="https://covers.openlibrary.org/b/id/<%= book.covers[0] %>-L.jpg" alt="book cover"
                            class="cover-img" loading="lazy" />
                    </div>


                    <h2 class="book-title">
                        <%= book.title %>
                    </h2>

                    <p class="book-description">
                        <%= (book.description.value&&book.description) ? book.description.value: (book.description
                            || "No description available" ) %>
                    </p>

                    <% if(book.author_key && book.author_key.length> 0) { %>

                        <input type="hidden" name="authorId" value="<%= book.author_key?book.author_key: " none"%>">
                        <p class="author">
                            <%= book.author_name ? book.author_name:"Unknown" %>
                        </p>


                        <% } else { %>
                            <p>Author Unknown</p>
                            <% } %>

                                <div class="button">
                                    <form method="POST" class="button-form">
                                        <input type="hidden" name="bookId" value="<%= book.key %>" />
                                        <input type="hidden" name="bookTitle" value="<%= book.title %>" />
                                        <input type="hidden" name="bookAuthor"
                                            value="<%= book.author_name ? book.author_name:author.name %>" />

                                        <input type="hidden" name="bookCover"
                                            value="<%= book.cover_i?book.cover_i:book.covers[0] %>" />
                                        <button class="btn btn-add" type="submit" formaction="/savedbook">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                                fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                                                <path
                                                    d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z" />
                                                <path
                                                    d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
                                            </svg>
                                            <p>Mark As Read</p>
                                        </button>
                                    </form>
                                </div>
                </div>


                <div class="card review-card">
                    <h2 class="review-header">
                        My Review:
                    </h2>
                    <% if(locals.usersReview ){ %>
                        <div class="review hidden" id="submittedReview">
                            <form method="POST" class="saved-review">
                                <p id="paragraph<%=book.key%>1" class="users-review">
                                    <%= usersReview %>
                                </p>

                                <textarea name="myReview" id="input<%=book.key%>1" class="review-input"
                                    placeholder="<%= locals.message? locals.message : 'Your review here' %>"
                                    maxlength="1500" hidden><%= usersReview %></textarea>
                                <div class="ud-buttons">
                                    <button class="btn-edit" id="edit<%=book.key%>1" onclick="handler('<%= book.key%>')"
                                        type="button"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                            fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                            <path
                                                d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325" />
                                        </svg>
                                        <p>Edit</p>
                                    </button>
                                    <input type="hidden" name="bookId" value="<%= book.key %>" />
                                    <button class="btn-delete" id="delete<%=book.key%>1" type="submit"
                                        formaction="/deletefromlist"><svg xmlns="http://www.w3.org/2000/svg" width="16"
                                            height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                            <path
                                                d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                            <path
                                                d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                                        </svg>
                                        <p>Delete</p>
                                    </button>
                                </div>
                                <button type="submit" id="save<%=book.key%>1" class="btn btn-save"
                                    formaction="/editreview" hidden><svg xmlns="http://www.w3.org/2000/svg" width="16"
                                        height="16" fill="currentColor" class="bi bi-check-lg" viewBox="0 0 16 16">
                                        <path
                                            d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425z" />
                                    </svg>
                                    <p>Kaydet</p>
                                </button>
                            </form>
                        </div>
                </div>
                <% } else { %>
                    <div class="review hidden" id="submittedReview">
                        <form action="/savedreview" method="POST" class="review-form">
                            <input type="hidden" name="bookId" value="<%= book.key %>" />
                            <input type="hidden" name="bookTitle" value="<%= book.title %>" />
                            <input type="hidden" name="bookAuthor"
                                value="<%= book.author_name ? book.author_name:author.name %>" />

                            <input type="hidden" name="bookCover"
                                value="<%= book.cover_i?book.cover_i:book.covers[0] %>" />
                            <textarea name="myReview" class="review-input"
                                placeholder="<%= locals.message? locals.message : 'Your review here' %>"
                                maxlength="1500"></textarea>
                            <button type="submit" class="btn btn-save"><svg xmlns="http://www.w3.org/2000/svg"
                                    width="16" height="16" fill="currentColor" class="bi bi-check-lg"
                                    viewBox="0 0 16 16">
                                    <path
                                        d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425z" />
                                </svg>
                                <p>Kaydet</p>
                            </button>
                        </form>
                    </div>
                    <% } %>
            </div>

    </div>


    </section>
    </div>
    <script>



        function handler(id) {
            document.getElementById("delete" + id + "1").hidden = true;
            document.getElementById("edit" + id + "1").hidden = true;
            document.getElementById("save" + id + "1").hidden = false;
            document.getElementById("input" + id + "1").hidden = false;
            document.getElementById("paragraph" + id + "1").hidden = true;
        }
    </script>

    </body>

    </html>